<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <!-- materializecss icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  
  <!-- this renders the header partial -->
  <header>
    <%= render 'listings/header' %>
  </header>
  
  <main>
    <div class="container">
      <div class="row center">
        <div class="col s12">
          <%= yield %>
        </div>
      </div>
    </div>
  </main>
  
  <!-- this renders the footer partial -->
  <footer>
    <%= render 'listings/footer' %>
  </footer>
  
  <!-- script tag for the nobile collapsable navbar -->
  <script>
    $( document ).ready(function(){$(".button-collapse").sideNav();});
  </script>

</body>
</html>
